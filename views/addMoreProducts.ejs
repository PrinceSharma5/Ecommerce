<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        
    </head>
    <body class=" bg-dark ">

        <div class="container-xl container p-5 my-5 text-white">
            <h1> Welcome Admin</h1>
            <a style="text-decoration: none;color:blue" href="/home">Home</a>
            <div class="w3-borders">
              <form action="/addMoreProducts" method="POST" >
              <label for="productName">Product Name: </label>
              <input required placeholder="Product name" name="productName" /><br>
              <label for="productPrice">Product Price: </label>
              <input required placeholder="Product price" name="productPrice" /><br>
              <label for="productQuantity">Product Quantity: </label>
              <input required placeholder="Product Quantity" name="productQuantity" /><br>
              <label for="productDescription">Product Description: </label>
              <input required placeholder="Product Description" name="productDiscr" /><br>
              
              <br><br>
             <input class="w3-button w3-black" value="Add Product" type="submit" />
             </form>
             <br>
            </div>
            </div><br>
            <div class="container-xl container p-5 my-5 bg-light text-dark">
            <% products.forEach(function(product){ %>

                <%  var temp=0 %>
                <% if(url.length==0){ %>
                  <%  url.push({}); %>
                <% } %>
                  <% for(var i=0;i<url.length;i++){ %>
                      <% if(url[i].originalname) { %>
                     <% if(url[i].originalname===product.name){ %>
                  
                        <% temp=i; %>
                       <%  break; %>
                      <% } %>
                     
                     <% } else { %>
                         <% url[i].originalname="xyz" %>
                         <% temp=i %>
                     <% } %>
                  <% } %>
                

                <div class="w3-container w3-flat-emerald" id="productcontainer">
               
                    <div class="card bg-light" style="width:400px">
                        <img class="card-img-top" src="<%= url[temp].originalname %>" alt="image" style="width:55%">
                        <div class="card-body">
                          <h4 class="card-title"> <%= product.name %></h4>
                          <p class="card-text"><%= product.price %></p>
                          <p class="card-text"><%= product.quantity %></p>
                          <p class="card-text"><%= product.discription %></p>
                        </div>
                      </div><br><br>

             

         <%   }) %>
           
            </div>
    </body>
</html>