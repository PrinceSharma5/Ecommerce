<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        
    </head>
    <body class=" bg-dark ">
        <div class="container-xl container p-5 my-5 text-white">
        <%- include("partials/header",{user:user}) %>
        <h1>Cart</h1>
        <a style="text-decoration: none;" href="/home">Home</a>
        </div>
        <div class="container-xl container p-5 my-5 bg-light text-dark">
            <% for(let keyy in cart){ %>
                 

                <%  var temp=0 %>
              <% if(url.length==0){ %>
                <%  url.push({}); %>
              <% } %>
                <% for(var i=0;i<url.length;i++){ %>
                    <% if(url[i].originalname) { %>
                   <% if(url[i].originalname===keyy){ %>
                
                      <% temp=i; %>
                     <%  break; %>
                    <% } %>
                   
                   <% } else { %>
                       <% url[i].originalname="xyz" %>
                       <% temp=i %>
                   <% } %>
                <% } %>

                <div class="card" style="width:400px">
                    <img class="card-img-top" src="<%= url[temp].originalname %>" alt="image" style="width:55%">
                    <div class="card-body">
                      <h4 class="card-title"> <p><%= keyy %></p></h4>
                      <p class="card-text"><%= cart[keyy].quantity %></p>
                      <p class="card-text"><%= cart[keyy].description %></p>
                      <form action="/minuscart?key=<%= keyy %>" method="post" >
                        <input class="btn btn-secondary" type="submit" value="-" />
                       </form>
                        <form action="/pluscart?key=<%= keyy %>" method="post" >
                        <input class="btn btn-secondary" type="submit" value="+" />
                    </form> 
                    <form action="/deleteproductfromcart?key=<%= keyy %>" method="post" >
                        <input class="btn btn-secondary" type="submit" value="Delete" />
                    </form> 
                    </div>
                  </div><br><br>

            <% } %>
          
            
        </div>
    </body>
</html>
